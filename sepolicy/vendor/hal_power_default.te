# Allow writing to files in /proc/tp_gesture
allow hal_power_default proc:file rw_file_perms;
allow hal_power_default proc:dir search;
allow hal_power_default input_device:dir { search } ;
allow hal_power_default input_device:chr_file { read write } ;
allow hal_power_default input_device:chr_file { open } ;
allow hal_power_default sysfs:file { open read write };